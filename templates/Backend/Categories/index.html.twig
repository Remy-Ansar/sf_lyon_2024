{% extends 'base.html.twig' %}

{% block title %}
	Administration des catégories
	{{ parent() }}
{% endblock %}

{% block stylesheets %}
	{{ parent() }}
	{{ encore_entry_link_tags('admin') }}
{% endblock %}

{% block javascripts %}
	{{ parent() }}
	{{ encore_entry_script_tags('admin') }}
{% endblock %}

{% block body %}


	<section class="container mt-2">
		<h1 class="text-center">Administration des catégories</h1>
		<a href="{{ path('admin.categories.create') }}" class="btn btn-primary">Création d'une catégorie</a>
		<div class="card-list mt-4">
			{% for categorie in categories.titre %}
				{% include 'Components/_categorieCard.html.twig' %}

			{% endfor %}
		</div>
	</section>
{% endblock %}
