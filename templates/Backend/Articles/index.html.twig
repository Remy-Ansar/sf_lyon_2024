{% extends "base.html.twig" %}

{% block title %}
	Administration des articles
	{{ parent() }}
{% endblock %}


{% block body %}

	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>


	<section class="container mt-2">
		<h1 class="text-center">Administration des articles</h1>
		<div class="card-list mt-4">
			{% for article in articles %}
				<pre>
                
            </pre>
				{# {{ dump(article) }} #}
				<div class="blog-card">
					<div class="blog-card-content">
						<h2 class="blog-card-header">{{ article.titre }}</h2>

						<strong>Auteur:</strong>
						{{ article.user.fullName }}
					</p>
					<p>
						<strong>Date de cr√©ation:</strong>
						{{ article.createdAt|format_datetime('full', 'none', locale='fr') }}
					</p>
					{% if article.updatedAt %}

						<p>
							<strong>Date de Modification:</strong>
							{{ article.updatedAt|format_datetime('full', 'none', locale='fr') }}
						</p>

						<p>
							<strong>Description:</strong>
							{{ article.description|slice(0,150) ~ '...'}}</p>
						<p></p>
						<p>
							<strong>{{article.enable ? 'Actif' : 'Non actif'}}
							</strong>
						</p>
					{% endif %}

					<div class="blog-card-btn">
						<a href="{{ path('admin.articles.edit', {slug: article.slug}) }}" class="btn btn-warning">
							<i class="bi bi-pencil-square"></i>Modifier</a>
						{% include "Backend/Articles/_deleteForm.html.twig" %}
					</div>

				</div>
			</div>
		{% endfor %}
	</div>
</section>{% endblock %}
